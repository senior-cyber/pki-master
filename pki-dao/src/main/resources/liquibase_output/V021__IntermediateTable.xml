<?xml version="1.1" encoding="UTF-8" standalone="no"?><databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">
    <changeSet author="Senior Cyber" id="V021__IntermediateTable-1">

        <createTable tableName="tbl_intermediate">
            <column autoIncrement="true" name="intermediate_id" type="BIGINT">
                <constraints notNullConstraintName="notnull_key_45" nullable="false" primaryKey="true" primaryKeyName="primary_key_10"/>
            </column>

            <column name="serial" type="BIGINT">
                <constraints notNullConstraintName="notnull_key_46" nullable="false" unique="true" uniqueConstraintName="unique_index_13"/>
            </column>

            <column name="common_name" type="VARCHAR(200)"/>
            <column name="organization" type="VARCHAR(200)"/>
            <column name="organizational_unit" type="VARCHAR(200)"/>

            <column name="country_code" type="VARCHAR(2)"/>
            <column name="locality_name" type="VARCHAR(200)"/>
            <column name="state_or_province_name" type="VARCHAR(200)"/>

            <column name="email_address" type="VARCHAR(200)"/>

            <column name="private_key" type="TEXT">
                <constraints notNullConstraintName="notnull_key_47" nullable="false"/>
            </column>
            <column name="certificate" type="TEXT">
                <constraints notNullConstraintName="notnull_key_48" nullable="false"/>
            </column>

            <column name="valid_from" type="DATE">
                <constraints notNullConstraintName="notnull_key_49" nullable="false"/>
            </column>
            <column name="valid_until" type="DATE">
                <constraints notNullConstraintName="notnull_key_50" nullable="false"/>
            </column>
            <column name="revoked_date" type="DATE"/>
            <column name="revoked_reason" type="VARCHAR(30)"/>

            <column name="status" type="VARCHAR(10)">
                <constraints notNullConstraintName="notnull_key_51" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints notNullConstraintName="notnull_key_52" nullable="false"/>
            </column>

            <column name="root_id" type="BIGINT">
                <constraints notNullConstraintName="notnull_key_53" nullable="false"/>
            </column>

        </createTable>

        <createIndex indexName="index_10" tableName="tbl_intermediate">
            <column name="user_id"/>
        </createIndex>
        <createIndex indexName="index_11" tableName="tbl_intermediate">
            <column name="valid_from"/>
        </createIndex>
        <createIndex indexName="index_12" tableName="tbl_intermediate">
            <column name="valid_until"/>
        </createIndex>
        <createIndex indexName="index_13" tableName="tbl_intermediate">
            <column name="status"/>
        </createIndex>
        <createIndex indexName="index_14" tableName="tbl_intermediate">
            <column name="root_id"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>