<?xml version="1.1" encoding="UTF-8" standalone="no"?><databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">
    <changeSet author="Senior Cyber" id="V022__CertificateTable-1">

        <createTable tableName="tbl_certificate">
            <column autoIncrement="true" name="certificate_id" type="BIGINT">
                <constraints notNullConstraintName="notnull_key_54" nullable="false" primaryKey="true" primaryKeyName="primary_key_11"/>
            </column>

            <column name="serial" type="BIGINT">
                <constraints notNullConstraintName="notnull_key_55" nullable="false" unique="true" uniqueConstraintName="unique_index_14"/>
            </column>

            <column name="common_name" type="VARCHAR(200)"/>
            <column name="organization" type="VARCHAR(200)"/>
            <column name="organizational_unit" type="VARCHAR(200)"/>

            <column name="country_code" type="VARCHAR(2)"/>
            <column name="locality_name" type="VARCHAR(200)"/>
            <column name="state_or_province_name" type="VARCHAR(200)"/>

            <column name="email_address" type="VARCHAR(200)"/>

            <column name="private_key" type="TEXT"/>
            <column name="certificate" type="TEXT">
                <constraints notNullConstraintName="notnull_key_56" nullable="false"/>
            </column>
            <column name="san" type="TEXT"/>
            <column name="revoked_date" type="DATE"/>
            <column name="revoked_reason" type="VARCHAR(30)"/>

            <column name="valid_from" type="DATE">
                <constraints notNullConstraintName="notnull_key_57" nullable="false"/>
            </column>
            <column name="valid_until" type="DATE">
                <constraints notNullConstraintName="notnull_key_58" nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(10)">
                <constraints notNullConstraintName="notnull_key_59" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints notNullConstraintName="notnull_key_60" nullable="false"/>
            </column>

            <column name="intermediate_id" type="BIGINT">
                <constraints notNullConstraintName="notnull_key_61" nullable="false"/>
            </column>

        </createTable>

        <createIndex indexName="index_15" tableName="tbl_certificate">
            <column name="user_id"/>
        </createIndex>
        <createIndex indexName="index_16" tableName="tbl_certificate">
            <column name="valid_from"/>
        </createIndex>
        <createIndex indexName="index_17" tableName="tbl_certificate">
            <column name="valid_until"/>
        </createIndex>
        <createIndex indexName="index_18" tableName="tbl_certificate">
            <column name="status"/>
        </createIndex>
        <createIndex indexName="index_19" tableName="tbl_certificate">
            <column name="intermediate_id"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>